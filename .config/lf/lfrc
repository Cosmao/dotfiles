set cleaner ~/.config/lf/lf_kitty_clean
set previewer ~/.config/lf/lf_kitty_preview

$mkdir -p ~/.trash

# cmds
#cmd trash $IFS="$(printf '\n\t')"; mv $fx ~/.trash
#TODO: Someday fix it so it doesnt flicker my screen
cmd trash ${{
  trash $fx
}}

cmd mkdir ${{
  printf "Directory Name: "
  read ans
  mkdir $ans
 }}

cmd mkfile ${{
  printf "File Name: "
  read ans
  $EDITOR $ans
 }}

# File Openers
map e $$EDITOR "$f"
map E $sudoedit "$f"

# Remove bind
map m

# binds
map . set hidden!
map D trash
map mf mkfile
map md mkdir

